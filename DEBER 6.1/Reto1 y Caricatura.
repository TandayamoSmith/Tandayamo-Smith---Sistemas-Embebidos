int i=0;
void setup(){
size(500,600);
background(#FFFFFF); 
smooth(); //dibuja la geometría con bordes suaves
}
void draw(){
fill(000000);//color de la linea
stroke(25,100,50); 
strokeWeight(6); 
beginShape();//subrutina

vertex(125,75);
vertex(100,125); 
vertex(80,175); 
vertex(75,200); 
vertex(73,250); 
vertex(71,300); 
vertex(69,350); 
vertex(69,400); 
vertex(77,450); 
vertex(87,500); 
vertex(100,540); 
vertex(105,500); 
vertex(108,475);
vertex(115,437);
vertex(245,500); 
vertex(270,500); 
vertex(390,437); 
vertex(410,540); 
vertex(437,450);
vertex(440,350); 
vertex(438,200); 
vertex(430,175);
vertex(425,150); 
vertex(413,125); 
//vertex(405,100);
vertex(387,75); 
vertex(385,125); 
vertex(382,150);
vertex(377,175); 
vertex(372,190); 
vertex(350,180);
vertex(325,170); 
vertex(300,165); 
vertex(275,162);
vertex(250,160); 
vertex(225,162); 
//vertex(200,170);
vertex(175,173); 
vertex(150,187); 
vertex(140,190);
vertex(135,150); 
vertex(130,125); 

endShape();//fin de subrutina

if(i<255){ 
fill(0,0,i); 
i++;
}
else
i=0;

fill(0,0,i);//color de la linea
beginShape();//subrutina
vertex(237,387); 
vertex(125,325); 
vertex(120,350);
vertex(125,375); 
//vertex(130,125); 
endShape();//fin de subrutina

fill(0,0,i);//color de la linea
beginShape();//subrutina
vertex(285,387); 
vertex(387,325); 
vertex(392,350);
vertex(387,375); 
//vertex(130,125); 
endShape();//fin de subrutina

}
