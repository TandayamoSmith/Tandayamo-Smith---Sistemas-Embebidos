void setup(){
  
  size(600,600);
  background(0);
  fill(#ff6800);
  strokeWeight(5);
  rect(10,10,580,580);
  stroke(#0000ff);
  line(15,14,584,585);
  line(15,585,587,13);
  strokeWeight(0);
  fill(255);
  ellipse(300,300,450,450);
  stroke(#008000);
  strokeWeight(8);
  fill(#FF0000);
  ellipse(300,300,350,350);
  
}


